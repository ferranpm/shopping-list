<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopping.list"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <service
            android:name="MainActivity" />

        <receiver
            android:name="AlarmReceiver" >
        </receiver>

        <activity
            android:name="MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="AddCategory"
            android:label="@string/title_activity_add_category" >
        </activity>

        <activity
            android:name="ProductesList"
            android:label="@string/title_activity_productes_list" >
        </activity>

        <activity
            android:name="AddProduct"
            android:label="@string/title_activity_add_product" >
        </activity>

        <activity
            android:name="AlarmResponse"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

    </application>
</manifest>
